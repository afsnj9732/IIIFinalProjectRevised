
@{
    Layout = null;
    Session["member"] = (new dbJoutaEntities()).tMember.Where(t => t.f會員編號 == 3).FirstOrDefault();
    var x = (tMember)Session["member"];
}




<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>文章 | Jouta</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="~/Content/css/blog_style.css">
    <link rel="shortcut icon" href="~/favicon.ico" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">


</head>



<body>
    <div class="container-fluid">
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-light header" id="main">
            <div class="container">
                <a class="navbar-brand" href="main.html">
                    <img src="~/Content/images/joutalogo_black.png" alt="" width="100">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">@Html.ActionLink("首頁", "Home", "Home", new { }, new { @class = "nav-link nav-main text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找飯局", "EatIndex", "Eat", new { }, new { @class = "nav-link nav-eat text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找旅遊", "TravelIndex", "Travel", new { }, new { @class = "nav-link nav-travel text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找文章", "Index", "Blog", new { }, new { @class = "nav-link nav-blog text-dark" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        @if (Session["member"] != null)
                        {
                            <li class="nav-item nav-link nav-login text-dark">觀迎 @x.f會員名稱 </li>
                            <li class="nav-item">@Html.ActionLink("登出", "Home", "Home", new { id = 0 }, new { @class = "nav-link nav-login text-dark" })</li>
                        }
                        else
                        {
                            <li class="nav-item">@Html.ActionLink("登入", "LoginIndex", "Login", new { }, new { @class = "nav-link nav-login text-dark" })</li>
                        }
                        <li class="nav-item">@Html.ActionLink("註冊", "Register", "Home", new { }, new { @class = "nav-link nav-register text-dark" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <form action="~/Blog/Create" method="post" enctype="multipart/form-data">
        <div class="container">
            <!-- Page Content -->
            <div class="row">
                <div class="col-lg-12" id="main-section">
                    <h1 id="main-title">
                        Suzume的美好豐富集綿
                    </h1>
                    <!-- 圖片上傳 -->
                    <div>
                        <p>預覽檔案</p>
                        <!--預覽區塊-->
                        <div class="st1">
                            <div class="x">

                                <img id="demo" class="" src="~/Content/images/BlogUploadSample.png" />
                            </div>



                            <!--上傳圖片的按鈕-->

                            <input id="file" type="file" name="blogPhoto" />
                            <p>(上傳圖片)</p>


                        </div>
                    </div>

                    <!-- 文章輸入項 -->

                    <div class="input-group" style="padding-bottom: 20px; width:90%;">
                        <div class="input-group-prepend">
                            <p id="pTitle">標題 :</p>
                        </div>
                        <input type="text" aria-label="First name" class="form-control" name="txtTitle">


                        <div class="dropdown" style="padding-left:20px; color:wheat">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                區域選擇
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">北區</a>
                                <a class="dropdown-item" href="#">南區</a>
                                <a class="dropdown-item" href="#">東區</a>
                            </div>
                        </div>

                    </div>

                    <div class="input-group" style="padding-bottom: 20px; width:60%;">
                        <div class="input-group-prepend">
                            <p id="pTitle">地點 :</p>
                        </div>
                        <input type="text" aria-label="First name" class="form-control">
                    </div>

                    <div class="input-group" style="padding-bottom: 20px; width:60%;">
                        <div class="input-group-prepend">
                            <p id="Qrcode">網址轉QRcode :</p>
                        </div>
                        <input type="text" aria-label="First name" class="form-control">
                    </div>

                    <!-- 文章輸入 -->
                    <div class="card my-10">
                        <h5 class="card-header">文章內容</h5>
                        <div class="card-body">

                            <div class="form-group">
                                <textarea class="form-control" rows="3" id="post-content" name="txtContent"></textarea>
                            </div>


                            <button type="submit" class="btn btn-primary">提交</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
    <!-- footer -->
    <div class="container-fluid footer">
        <p class="text-center mt-2 mb-2">Copyright © 2020 Jouta All rights reserved</p>
    </div>

    <!-- script -->
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/IIIProject/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
    <script src="https://cdn.jsdelivr.net/semantic-ui/2.2.7/semantic.min.js"></script>
    <script src="~/Scripts/IIIProject/navbar.js"></script>
    <script src="~/Scripts/IIIProject/blog.js"></script>
</body>

</html>

}