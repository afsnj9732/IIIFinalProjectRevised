@model IIIProject_travel.ViewModel.CGetMore
@{
    Layout = null; 
}

@*edit start*@
<div class="modal fade combine_edit" id="ajax_edit" role="dialog"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog change-max-width-1400" role="document">
        <div class="modal-content" style="height:85%">
            <div class="modal-header border-main-color">
                <h5 class="modal-title" id="exampleModalLabel"><span style="font-weight:bolder;">@Model.TargetAct.f活動標題 編輯</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- edit頭 -->
            <div class="modal-body">
                <form enctype="multipart/form-data" action="~/Travel/Edit" method="post">
                    <div class="container-fluid">
                        <span>標題：<input type="text" name="f活動標題" style="width:90%" class="NeedAT" value="@Model.TargetAct.f活動標題"><p class="NeedATTo" style="color:red" hidden>活動標題請至少填滿5個字</p></span>
                        <div class="row m-0 mb-3 justify-content-around">
                            <span>旅遊開始日期： <input type="text" class="ActivityStart" name="f活動開始時間" value="@Model.TargetAct.f活動開始時間" listNumber="1" readonly><p class="ActivityStartTo" style="color:red" hidden>活動開始時間必填</p></span>
                            <span>旅遊結束日期： <input type="text" class="ActivityEnd" name="f活動結束時間" value="@Model.TargetAct.f活動結束時間" readonly><p class="ActivityEndTo" style="color:red" hidden>活動結束時間必填</p></span>
                            <span>入團截止： <input type="text" class="ActivityFindEnd" name="f活動招募截止時間" value="@Model.TargetAct.f活動招募截止時間" readonly><p class="ActivityFindEndTo" style="color:red" hidden>招募截止時間必填</p></span>
                        </div>
                        <div class="row mb-4 mx-auto align-items-center justify-content-around">
                            <span><img src="~/Content/images/04.png" class="mb-1" alt="">預算：<input type="text" name="f活動預算" class="NeedAC" value="@Model.TargetAct.f活動預算"><span class="NeedACTo" style="color:red" hidden>活動預算必填</span></span>

                        </div>
                        <div class="row mb-4 mx-auto align-items-center justify-content-around">
                            <span class="row  align-items-center">團圖：<input type="file" name="picFile" class="NeedAP"><span class="mr-5 NeedAPTo" style="color:red" hidden>活動團圖必填</span></span>

                            <div class="row align-items-center">
                                <button type="button" class="btn btn-secondary btn_get_map" data-toggle="modal" getMapNumber="1" data-target="#getMap" style="background-color:gray">
                                    設定地點
                                </button>
                                <span class="btn_get_map_msg "></span>
                            </div>
                            <input type="hidden" class="evtLng" value="@Model.TargetAct.f活動經度" name="f活動經度">
                            <input type="hidden" class="evtLat" value="@Model.TargetAct.f活動緯度" name="f活動緯度">

                            <span class=" ">
                                <img src="~/Content/images/03.png" class="mb-1" alt="">
                                地區：
                                <select name="f活動地區">
                                    <option value="北部">北部</option>
                                    <option value="中部">中部</option>
                                    <option value="南部">南部</option>
                                    <option value="東部">東部</option>
                                </select>
                            </span>
                        </div>



                        <div class="row align-items-center">
                            <div class="mx-auto mb-3">
                                內容：<textarea name="f活動內容" id="EditAct" @*style="width:1000px;height:220px;vertical-align:top;"*@ class="NeedAL">@Html.Raw(Model.TargetAct.f活動內容)</textarea>
                                <p class="NeedALTo" style="color:red" hidden>活動內容請至少填滿100字</p>
                            </div>
                        </div>
                    </div>
                    <!-- 揪團隱藏不顯示項目 -->
                    <input type="hidden" name="f活動編號" value="@Model.TargetAct.f活動編號">
                    <!-- 揪團內容尾 -->
                    <div class="modal-footer  mt-2 border-main-color">
                        <input type="submit" class="btn JoutaSend" limitNumber="1" style="background-color:#FFE0B2" value="送出" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@*edit end*@


@*score start*@
<div class="modal fade combine_score" id="ajax_score" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog change-max-width-1420" role="document" style="padding-right: 17px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.TargetAct.f活動標題 評分區</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body row align-items-center ">
                <div AddScore="@Model.TargetAct.f活動編號" class="Score   mx-auto">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <img ScoreID="@i" isclick="false" ScoreTarget="@Model.TargetAct.f活動編號" src="~/Content/images/Star.png" />
                    }
                </div>
            </div>
            <div class="modal-footer justify-content-end">
                <span>
                    <button type="button" class="btn btn-warning leaveScore" leaveScore="@Model.TargetAct.f活動編號">送出</button>
                    <button type="button" class="btn btn-secondary resetScore" resetScore="@Model.TargetAct.f活動編號">重設</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                </span>
            </div>
        </div>
    </div>
</div>
@*score end*@

@*msg start*@
<div class="modal fade combine_msg" id="ajax_msg" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog change-max-width-1420" role="document" style="padding-right: 17px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.TargetAct.f活動標題 留言區</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div MsgAdd="@Model.TargetAct.f活動編號">
 
                </div>
            </div>
            <div class="modal-footer justify-content-between ml-2">
                <input type="text" class="ml-2  " sentMsg="@Model.TargetAct.f活動編號" style="width:70%" />
                <div class="mr-3">
                    <button type="button" class="btn btn-warning leaveMsg" leaveMsg="@Model.TargetAct.f活動編號">送出</button>
                    <button type="button" class="mr-5 btn btn-secondary" data-dismiss="modal">關閉</button>
                </div>
            </div>
        </div>
    </div>
</div>
@*msg end*@

@*join start*@
<div class="modal fade combine_join" id="ajax_join" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog change-max-width-1420" role="document" style="padding-right: 17px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.TargetAct.f活動標題 團員名單</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div ActAdd="@Model.TargetAct.f活動編號" class="d-flex flex-column bd-highlight">

                </div>
            </div>
            <div class="modal-footer">
                @if (string.Compare(DateTime.Now.ToString("yyyy-MM-dd"), Model.TargetAct.f活動招募截止時間) > 0)
                {
                    //招募已結束
                    <p>活動招募已截止</p>
                    <button type="button" class="btn btn-secondary leaveAct" leaveAct="@Model.TargetAct.f活動編號">我要退團</button>
                }
                else
                {   //招募未結束
                    <button type="button" class="btn btn-warning joinAct" joinAct="@Model.TargetAct.f活動編號">我要入團</button>
                    <button type="button" class="btn btn-secondary leaveAct" leaveAct="@Model.TargetAct.f活動編號">我要退團</button>
                }
            </div>
        </div>
    </div>
</div>
@*join end*@

@*readmore start*@
<div class="modal fade combine_readmore" id="ajax_readmore" role="dialog"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog change-max-width-1400" role="document">
        <div class="modal-content">
            <div class="modal-header  border-main-color">
                <h5 class="modal-title" id="exampleModalLabel"><span style="font-weight:bolder;"> @Model.TargetAct.f活動標題</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- 互動文章 -->
                <div class="container-fluid">
                    <div class="row m-0 mb-3 justify-content-around">
                        <span>活動日期： <span>@Model.TargetAct.f活動開始時間</span></span>
                        <span>結束日期： <span>@Model.TargetAct.f活動結束時間</span></span>
                        <span>入團截止： <span>@Model.TargetAct.f活動招募截止時間</span></span>
                        <span><img src="~/Content/images/17.png" alt="">@Model.TargetAct.f活動分類</span>
                        <span><img src="~/Content/images/03.png" alt="">@Model.TargetAct.f活動地區</span>
                        <span><img src="~/Content/images/04.png" alt="">@Model.TargetAct.f活動預算</span>
                        <span><img src="~/Content/images/06.png" class="" alt=""><span ToUpdateVC="@Model.TargetAct.f活動編號">@Model.TargetAct.f活動瀏覽次數</span></span>
                        <span><img src="~/Content/images/05.png" class="" alt=""><span ToUpdateGC="@Model.TargetAct.f活動編號">@Model.TargetAct.f活動讚數</span></span>
                        @if (Session["member"] != null)
                        {
                            string iflikeit = (Model.MemberLike == true) ? "14.png" : "11.png";
                            <span class="col-auto"><img style="cursor: pointer;" class="likeIt" likeIndex="@Model.TargetAct.f活動編號" src="~/Content/images/@iflikeit" alt=""></span>
                        }
                    </div>
                    @*<hr />*@
                    <div class="row">
                        <img src="~/Content/images/@Model.TargetAct.f活動團圖" alt="" class="mx-auto" style="width: 60%;margin: auto;height:500px">
                    </div>
                    <br />
                    <hr />
                    <br />

                    <div class="row align-items-center">
                        <div id="UserBlock" class="mx-auto">
                            <p><img src="~/Content/images/16.png" class="pb-1" alt="">@Model.TargetAct.tMember.f會員稱號</p>
                            <a href="@Url.Action("otherprofile","Profile",new { id= Model.TargetAct.f會員編號 })">
                                <img src="~/Content/images/@Model.TargetAct.tMember.f會員大頭貼" alt="" class="col-auto" style="width: 300px;">
                            </a>
                            <p>@Model.TargetAct.tMember.f會員名稱</p>
                            <div class="row d-flex flex-column bd-highlight mx-auto">
                                <p>團主評分:</p>
                                <div class="mx-auto">
                                    @for (int i = 0; i < Model.TargetAct.tMember.f會員評分; i++)
                                    {
                                        <img src="~/Content/images/ChangeStar.png" width="30" height="30" />
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="change-max-width-1000 ">
                            <div id="activity_content" class="row align-items-center m-0 ml-2 mr-2 textBox  ">
                                @Html.Raw(Model.TargetAct.f活動內容)
                            </div>
                        </div>
                    </div>
                    <br />

                    @if (Session["member"] != null)
                    {

                        <div class="container">
                            <div class="row   justify-content-around">
                                <button class="btn btn-block mr-1  p-1 pr-2 pl-2 FeelGood" style="background-color:#FFE0B2;" target="@Model.TargetAct.f活動編號">
                                    <img src="~/Content/images/05.png" class="pb-1 ">覺得讚
                                </button>
                                <button class="btn btn-block mr-1  p-1 pr-2 pl-2" data-toggle="modal" actID="@Model.TargetAct.f活動編號" data-target="#ajax_join" style="background-color:#FFE0B2 ;">
                                    <img src="~/Content/images/10.png" class="pb-1" alt="">
                                    @{
                                        if (Model.LoginMember.f會員編號 != Model.TargetAct.f會員編號)
                                        {
                                            @:入退團
                                        }
                                        else
                                        {
                                            @:來審核
                                        }
                                    }
                                </button>

                                <button class="btn btn-block mr-1  p-1 pr-2 pl-2" data-toggle="modal" data-target="#ajax_score" style="background-color:#FFE0B2 ;">
                                    <img src="~/Content/images/10.png" class="pb-1" alt="">給分數
                                </button>
                                <div style="cursor: pointer;">
                                    <button class="btn btn-block mr-1  p-1 pr-2 pl-2" data-toggle="modal" leaveMsg="@Model.TargetAct.f活動編號" data-target="#ajax_msg" style="background-color:#FFE0B2;">
                                        <img src="~/Content/images/12.png" alt="">留言區
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- 互動文章 -->
                <div class="modal-footer   mt-3  border-main-color">
                    @if (Session["member"] != null && Model.LoginMember.f會員編號 == Model.TargetAct.f會員編號)
                    {
                        if (string.Compare(Model.TargetAct.f活動招募截止時間, DateTime.Now.ToString("yyyy-MM-dd")) > 0)
                        {
                            //招募未結束才可編輯
                            <button class="btn btn-info  JoutaEdit" limitNumber="1" act_id="@Model.TargetAct.f活動編號" data-toggle="modal" data-target="#ajax_edit">
                                編輯
                            </button>
                            @Html.ActionLink("刪除", "Delete", "Travel", new { id = Model.TargetAct.f活動編號 }, new { @class = "btn btn-danger delete_act" })
                        }
                        else
                        {
                            <p>招募結束不可編輯不可刪除</p>
                        }
                    }
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                </div>
            </div>
        </div>
    </div>
</div>
@*readmore end*@