@model IIIProject_travel.ViewModel.CActAdd
@{
    Layout = null; //f
    var loginMember = (tMember)Session["member"];
}

<h2>審核名單</h2><br />
<div class="row">
    @foreach (var wantGuy in Model.WantGuys)
    {
        if (wantGuy==null)
        {
            continue;
        }
        <div class="m-3 row  align-items-center   " style="width:210px;">

            <a href="@Url.Action("otherprofile","Profile",new { id= wantGuy.f會員編號 })">
                <img width="114" height="114" src="~/Content/images/@wantGuy.f會員大頭貼" title="@wantGuy.f會員名稱" />
            </a>
            <div class="d-flex flex-column bd-highlight align-items-center">
                @if (Model.BlackList.Length > 1 && Array.IndexOf(Model.BlackList, wantGuy.f會員編號.ToString()) > -1)
                {
                    <span class="mx-auto" style="width:40px;">
                        <img width="40" height="40" src="~/Content/images/30.png" />
                    </span>
                }
                else
                {
                    <span class="mx-auto" style="width:40px;">
                        <img width="40" height="40" src="~/Content/images/29.png" />
                    </span>

                }
                <div class="mx-auto join_user_name" title="@wantGuy.f會員名稱">@wantGuy.f會員名稱</div>
            </div>

            <button class="button btn-secondary jouta_black_list pr-1 pl-1" member_id="@wantGuy.f會員編號" act_target="join" act_id="@Model.TargetAct.f活動編號" style="width:114px">加入黑名單</button>
            @if (Session["member"] != null && Model.TargetAct.f會員編號 == loginMember.f會員編號)
            {
                <button class="button btn-info jouta_agree pr-1 pl-1" member_id="@wantGuy.f會員編號" act_target="agree" act_id="@Model.TargetAct.f活動編號" style="width:54px">入團</button>
                <button class="button btn-danger jouta_agree pr-1 pl-1" style="width:168px;" member_id="@wantGuy.f會員編號" act_target="refuse" act_id="@Model.TargetAct.f活動編號">拒絕入團</button>
            }


        </div>
    }
</div>
<br />
<hr />
<br />
<h2>入團名單</h2><br />
<div class="row">
    @foreach (var attendGuy in Model.AttendGuys) 
    {
        if (attendGuy==null)
        {
            continue;
        }

        <div class="m-3 row  align-items-center   " style="width:210px;">

            <a href="@Url.Action("otherprofile","Profile",new { id= attendGuy.f會員編號 })">
                <img width="114" height="114" src="~/Content/images/@attendGuy.f會員大頭貼" title="@attendGuy.f會員名稱" />
            </a>
            <div class="d-flex flex-column bd-highlight align-items-center">
                @if (Model.BlackList.Length > 1 && Array.IndexOf(Model.BlackList, attendGuy.f會員編號.ToString()) > -1)
                {
                    <span class="mx-auto" style="width:40px;">
                        <img width="40" height="40" src="~/Content/images/30.png" />
                    </span>
                }
                else
                {
                    <span class="mx-auto" style="width:40px;">
                        <img width="40" height="40" src="~/Content/images/29.png" />
                    </span>

                }
                <div class="mx-auto join_user_name" title="@attendGuy.f會員名稱">@attendGuy.f會員名稱</div>
            </div>

            <button class="button btn-secondary jouta_black_list pr-1 pl-1" member_id="@attendGuy.f會員編號" act_target="join" act_id="@Model.TargetAct.f活動編號" style="width:114px">加入黑名單</button>
            @if (Session["member"] != null && Model.TargetAct.f會員編號 == loginMember.f會員編號)
            {
                <button class="button btn-danger jouta_kick pr-1 pl-1" member_id="@attendGuy.f會員編號" act_id="@Model.TargetAct.f活動編號" style="width:54px">踢他</button>
            }

        </div>

    }
</div>
