@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-Hant-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>聯絡我們 | Jouta</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/聯絡我們.css")
</head>

<body>
    <!-- header -->
    <div class="container-fluid">

        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-fixed-top">
            <div class="container">
                <div class="navbar-header" id="main">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <a class="navbar-brand" href="main.html">
                    <img src="~/Content/images/joutalogo_black.png" alt="" width="100">
                </a>
                <div class="navbar-collapse collapse justify-content-between" id="navbarNav">
                    <ul class="nav navbar-nav">
                        <li class="nav-item active">@Html.ActionLink("首頁", "Home", "Home", new { }, new { @class = "nav-link nav-main text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找飯局", "EatIndex", "Eat", new { }, new { @class = "nav-link nav-eat text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找旅遊", "TravelIndex", "Travel", new { }, new { @class = "nav-link nav-travel text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找文章", "List", "Blog", new { }, new { @class = "nav-link nav-blog text-dark" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        @*@if (Session["member"] != null)
                            {
                                <li class="nav-item nav-link nav-login text-dark">觀迎 @x.f會員名稱 </li>
                                <li class="nav-item">@Html.ActionLink("登出", "Home", "Home", new { id = 0 }, new { @class = "nav-link nav-login text-dark" })</li>
                            }
                            else*@
                        @*{*@
                        <li class="nav-item">@Html.ActionLink("登入", "LoginIndex", "Login", new { }, new { @class = "nav-link nav-login text-dark" })</li>
                        @*}*@
                        <li class="nav-item">@Html.ActionLink("註冊", "Register", "Home", new { }, new { @class = "nav-link nav-register text-dark" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="mt-5"></div>
    <h2 style="text-align:center;">聯絡我們</h2>
    <p style="text-align: center">我們十分重視您的寶貴意見與問題，我們將竭誠儘速為您服務</p>


    <div class="container" style="margin-bottom: 5rem;">

        <fieldset>
            <legend><img src="~/Content/images/letter.jpg" class="imgLetter" alt="" width="100"></legend>
            <div class="st1">
                <div class="op">
                    <select name="travel-form">
                        <option>1.旅遊意見</option>
                        <option>2.飯局意見</option>
                        <option>3.文章意見</option>
                        <option>4.其他意見</option>
                    </select>
                </div>

                <div class="st1">
                    <div class="st2">
                        <label for="" class="t1">會員帳號：</label>
                        <input id="帳號" type="text" size="40" autofocus onblur="c檢查帳號()">
                        <span id="idac"></span>
                    </div>
                </div>

                <div>
                    <div class="st1">
                        <div class="st2">
                            <label class="t1" for="account1">聯絡人：</label>
                            <input id="聯絡人" type="text" name="name" size="20" width="50" onblur="c檢查聯絡人()">

                            <input type="radio" name="gender">
                            <label>先生</label>
                            <label>
                                <input type="radio" name="gender">女士
                            </label>
                            <span id="idcp"></span>
                        </div>

                    </div>

                </div>
                <div class="st1">
                    <div class="st2">
                        <label for="" class="t1">電子郵件：</label>
                        <input id="mail" type="email" name="email" size="40" onblur="c檢查mail">
                        <span id="idmail"></span>
                    </div>
                </div>
                <div class="st1">
                    <div class="st2">
                        <label for="" class="t1">電話：</label>
                        <input id="電話" type="tel" name="phone" size="40" onblur="c檢查電話()">
                        <span id="idtal"></span>

                    </div>

                </div>

                <div class="st1">
                    <div class="st2">
                        <label class="t1" for="comment1">意見：</label>
                        <textarea id="意見" cols="40" rows="5" name="comment" onblur="c檢查意見()"></textarea>
                        <span id="idop"></span>
                    </div>
                </div>
                <div class="sub">
                    <input type="submit" value="送出">
                    <input type="reset" value="清除">
                </div>
            </div>
        </fieldset>
        <p class="pb">本信箱的郵件處理時間為一般工作日上午 8 點 30 分至下午 5 點 30 分</p>
    </div>
    <div class="container-fluid footer">
        <p class="text-center mt-2 mb-2">&copy; @DateTime.Now.Year Jouta All rights reserved</p>
    </div>
    <script src="~/Content/js/jquery-3.5.1.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/js/check.js"></script>
</body>
</html>