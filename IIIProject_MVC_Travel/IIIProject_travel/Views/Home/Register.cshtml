@model IIIProject_travel.ViewModel.CRegister
@{
    Layout = null;
    var x = (tMember)Session["member"];
}

<!DOCTYPE html>
<html lang="zh-Hant-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>註冊 | Jouta</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/register.css" rel="stylesheet" />
</head>

<body>
    <!-- header -->
    <div class="container-fluid">

        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-fixed-top">
            <div class="container">
                <div class="navbar-header" id="main">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <a class="navbar-brand" href="@Url.Action("Home","Home")">
                    <img src="~/Content/images/joutalogo_black.png" alt="" width="100">
                </a>
                <div class="navbar-collapse collapse justify-content-between" id="navbarNav">
                    <ul class="nav navbar-nav">
                        <li class="nav-item active">@Html.ActionLink("首頁", "Home", "Home", new { }, new { @class = "nav-link nav-main text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找飯局", "EatIndex", "Eat", new { }, new { @class = "nav-link nav-eat text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找旅遊", "TravelIndex", "Travel", new { }, new { @class = "nav-link nav-travel text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找文章", "List", "Blog", new { }, new { @class = "nav-link nav-blog text-dark" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        @if (Session["member"] != null)
                        {
                            <li class="nav-item nav-link nav-login text-dark">觀迎 @x.f會員名稱 </li>
                            <li class="nav-item">@Html.ActionLink("登出", "Home", "Home", new { id = 0 }, new { @class = "nav-link nav-login text-dark" })</li>
                        }
                        else
                        {
                            <li class="nav-item">@Html.ActionLink("登入", "LoginIndex", "Login", new { }, new { @class = "nav-link nav-login text-dark" })</li>
                        }
                        <li class="nav-item">@Html.ActionLink("註冊", "Register", "Home", new { }, new { @class = "nav-link nav-register text-dark" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <!--    狀態管理    -->
    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
    {
        <div class="alert alert-success">
            <strong>Success!</strong>@ViewBag.Message
        </div>

    }
    else
    {
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-12 offset=md-1">
                    <div class="row">
                        <div class="col-sm-7 col-md-5 register-left">
                            <a href="main.html"><img src="~/Content/images/joutalogo_white_noborder.png"></a>
                            <h3>立即加入</h3>
                            <p>Join Us</p>
                        </div>
                        <div class="col-sm-5 col-md-7 register-right">
                            <h2>會員註冊</h2>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken();
                                <div class="register-form">
                                    <!--    資料驗證開始範圍    -->
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <input type="email" class="form-control" name="txtEmail" placeholder="信箱">
                                        @Html.ValidationMessageFor(model => model.txtEmail, "", new { @class = "text-danger" })
                                        @Html.ValidationMessage("emailExist", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <input name="txtNickname" type="text" class="form-control" placeholder="使用者名稱">
                                        @Html.ValidationMessageFor(model => model.txtNickname, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="gender d-flex">
                                        <div class="sex d-flex form-check align-items-center col-lg-6 col-sm-12">
                                            <label for="sex" class="form-check-label">Female(女)</label>
                                            <input type="radio" name="txtGender" value="Female" class="form-control">
                                        </div>
                                        <div class="sex d-flex form-check align-items-center col-lg-6 col-sm-12">
                                            <label for="sex" class="form-check-label">Male(男)</label>
                                            <input type="radio" name="txtGender" value="Male" class="form-control">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input name="txtPassword" type="password" class="form-control" placeholder="密碼">
                                        @Html.ValidationMessageFor(m => m.txtPassword, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <input name="txtPassword_confirm" type="password" class="form-control" placeholder="再次輸入密碼">
                                        @Html.ValidationMessageFor(m => m.txtPassword_confirm, "", new { @class = "text-danger" })
                                    </div>


                                    <button type="submit" class="btn btn-primary">註冊</button>
                                    <button type="reset" class="btn btn-default">清除</button>
                                </div>

                                if (ViewBag.Message != null)
                                {   //錯誤訊息
                                    <div class="alert alert-danger">
                                        <strong>Error!</strong>@ViewBag.Message
                                    </div>

                                }

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- footer -->
    <div class="container-fluid footer">
        <p class="text-center mt-2 mb-2">&copy; @DateTime.Now.Year Jouta All rights reserved</p>
    </div>
    <!-- script -->
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @section Scripts{
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    }
    @*@RenderSection("Scripts", false);*@
</body>

</html>
